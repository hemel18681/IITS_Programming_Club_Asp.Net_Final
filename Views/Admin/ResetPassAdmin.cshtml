@model IITS_Programming_Club.Models.Admin

    <div class="container">

        <h4>Admin Reset Password</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="ResetPassAdmin">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="admin_id" value="@Model.admin_id" class="control-label"></label>
                        <input hidden asp-for="admin_id" />
                        <label asp-for="admin_id" class="form-control">@Model.admin_id</label>
                        <span asp-validation-for="admin_id" value="@Model.admin_id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="admin_pass" class="control-label"></label>
                        <input type="password" asp-for="admin_pass" placeholder="enter the pass" class="form-control" />
                        <span asp-validation-for="admin_pass" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Reset Pass" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="AdminWork">Back to Admin Work Panel</a>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
