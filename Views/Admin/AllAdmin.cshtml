
@using IITS_Programming_Club.Models
@model IEnumerable<IITS_Programming_Club.Models.Admin>
@using Microsoft.AspNetCore.Http;
@using IITS_Programming_Club.Models;

    <div class="container">
        @{
            string s = Context.Session.GetString("adminid");
            if (s == null)
            {
                @:Please login First
            }
            else
            {
                <form method="post" asp-controller="admin" asp-action="searchadmin">
                    @ViewBag.message
                    <p>
                        Search the Admin Id for the Details and Reset His/Her Password
                    </p>
                    <table cellpadding="2" cellspacing="2">
                        <tr>
                            <td>Admin ID</td>
                            <td>
                                <input type="text" name="id" placeholder="id" />
                            </td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                            <td>
                                <input type="submit" value="Search" />
                            </td>
                        </tr>
                    </table>
                </form>

                <div class="container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Admin Name
                                </th>
                                <th>
                                    Admin ID
                                </th>
                                <th>
                                    Admin Phone
                                </th>
                                <th>
                                    Admin Mail
                                </th>
                                <th>
                                    Admin Address
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.admin_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.admin_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.admin_phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.admin_mail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.admin_address)
                                    </td>
                                    <td>
                                        <a onclick="return confirm('Are you sure you want to delete @item.admin_id?')" asp-controller="Admin" asp-action="deleteadmin" asp-route-id="@item.admin_id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            }
        }

    </div>

