@model IEnumerable<IITS_Programming_Club.Models.Event>
@using Microsoft.AspNetCore.Http;
@using IITS_Programming_Club.Models;

    <div class="container">
        @{
            string s = Context.Session.GetString("adminid");
            if (s == null)
            {
                @:Please login First
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.event_name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.event_link)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.event_for)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.winner)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.event_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.event_link)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.event_for)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.winner)
                                </td>
                                <td>
                                    <a asp-controller="Admin" asp-action="EventEdit" asp-route-id="@item.event_id">Edit</a>
                                    <a onclick="return confirm('Are you sure you want to delete @item.event_id?')" asp-controller="Admin" asp-action="DeleteEvent" asp-route-id="@item.event_id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
    </div>