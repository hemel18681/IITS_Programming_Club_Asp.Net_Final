@model IITS_Programming_Club.Models.Admin
@using Microsoft.AspNetCore.Http;
@using IITS_Programming_Club.Models;


    <div class="container">
        @{
            string s = Context.Session.GetString("adminid");
            if (s == null)
            {
                @:Please login First
            }
            else
            {

                <h4>Admin</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Editprofile">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="admin_name" class="control-label"></label>
                                <input asp-for="admin_name" class="form-control" />
                                <span asp-validation-for="admin_name" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="admin_id" />
                            <div class="form-group">
                                <label asp-for="admin_pass" class="control-label"></label>
                                <input asp-for="admin_pass" class="form-control" />
                                <span asp-validation-for="admin_pass" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="admin_phone" class="control-label"></label>
                                <input asp-for="admin_phone" class="form-control" />
                                <span asp-validation-for="admin_phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="admin_mail" class="control-label"></label>
                                <input asp-for="admin_mail" class="form-control" />
                                <span asp-validation-for="admin_mail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="admin_address" class="control-label"></label>
                                <input asp-for="admin_address" class="form-control" />
                                <span asp-validation-for="admin_address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            }
        }
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

