@model IEnumerable<IITS_Programming_Club.Models.Complain>
@using Microsoft.AspNetCore.Http;
@using IITS_Programming_Club.Models;
    <div class="container">
        @{
            string s = Context.Session.GetString("adminid");
            if (s == null)
            {
                @:Please login First
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.student_id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.message)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.student_id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.message)
                                </td>
                                <td>
                                    <a onclick="return confirm('Are you sure you want to delete @item.student_id?')" asp-controller="Admin" asp-action="DeleteComplain" asp-route-id="@item.student_id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }

    </div>