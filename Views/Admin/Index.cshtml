@model IITS_Programming_Club.Models.Admin

    <div class="container">
        <div>
            <img src="~/proggif.gif" class="center" style="margin-left:400px;width:250px; height: 200px;">
        </div>

        <h4>Admin</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Index">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="admin_id" class="control-label">Admin ID:</label>
                        <input asp-for="admin_id" class="form-control" />
                        <span asp-validation-for="admin_id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="admin_pass" class="control-label">Admin Pass:</label>
                        <input type="password" asp-for="admin_pass" class="form-control" />
                        <span asp-validation-for="admin_pass" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
