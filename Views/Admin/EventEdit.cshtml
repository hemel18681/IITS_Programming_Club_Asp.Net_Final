@model IITS_Programming_Club.Models.Event
@using Microsoft.AspNetCore.Http;
@using IITS_Programming_Club.Models;

    <div class="container">
        @{
            string s = Context.Session.GetString("adminid");
            if (s == null)
            {
                @:Please login First
            }
            else
            {
                <h4>Event</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="EventEdit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="event_id" />
                            <div class="form-group">
                                <label asp-for="event_name" value="@Model.event_name" class="control-label"></label>
                                <input type="hidden" asp-for="event_name" />
                                <label asp-for="event_name" class="form-control">@Model.event_name</label>
                                <span asp-validation-for="event_name" value="@Model.event_name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="event_link" class="control-label"></label>
                                <input asp-for="event_link" class="form-control" />
                                <span asp-validation-for="event_link" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="event_for" class="control-label"></label>
                                <select asp-for="event_for">
                                    <option selected disabled>--- select option ---</option>
                                    <option>All Group</option>
                                    <option>Adcance</option>
                                    <option>Intermediate</option>
                                    <option>Beginner</option>
                                </select>
                                <span asp-validation-for="event_for" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="date" class="control-label"></label>
                                <input asp-for="date" class="form-control" />
                                <span asp-validation-for="date" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="winner" class="control-label"></label>
                                <input asp-for="winner" class="form-control" />
                                <span asp-validation-for="winner" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="AdminWork">Back to Work panel</a>
                </div>

            }
        }
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
