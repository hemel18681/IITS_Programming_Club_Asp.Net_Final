@model IITS_Programming_Club.Models.StudentInfo

    <div class="container">
        <h4>Student Reset Password</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="ResetPassStudent">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="student_id" value="@Model.student_id" class="control-label"></label>
                        <input hidden asp-for="student_id" />
                        <label asp-for="student_id" class="form-control">@Model.student_id</label>
                        <span asp-validation-for="student_id" value="@Model.student_id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="student_pass" class="control-label"></label>
                        <input type="password" asp-for="student_pass" placeholder="enter the pass" class="form-control" />
                        <span asp-validation-for="student_pass" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="student_division" class="control-label"></label>
                        <select asp-for="student_division">
                            <option selected disabled>--- select option ---</option>
                            <option>Adcance</option>
                            <option>Intermediate</option>
                            <option>Beginner</option>
                        </select>
                        <span asp-validation-for="student_division" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="student_status" class="control-label"></label>
                        <select asp-for="student_status">
                            <option selected disabled>--- select option ---</option>
                            <option>Active</option>
                            <option>Block</option>
                        </select>
                        <span asp-validation-for="student_status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="block_reason" class="control-label"></label>
                        <input asp-for="block_reason" class="form-control" />
                        <span asp-validation-for="block_reason" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Reset Pass" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="AdminWork">Back to Admin Work Panel</a>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
